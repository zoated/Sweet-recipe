.chosen-type {
  display: flex;
  margin: 10px;
  width: 100%;
}
.page__bd{
  position: sticky;
  width: 100%;
  top: 0;
  left: 0;
  margin-top: 0;
  z-index: 99999;
}
.swiper-box{
  height: 200px
}
.slide-image {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
}

.left {
  display: flex;
  width: 46%;
  height: 100%;
  background-color: #e6e6e6;
  border-radius: 3%;
  margin-right: 10px;
}

.left-text {
  margin: 16px 10px;
}

.left-text1 {
  font-size: 16px;
}

.left-text2 {
  font-size: 12px;
  color: #bfbfbf;
}

.left-icon {
  width: 32px;
  height: 32px;
  margin: 16px 0px 16px 26px;
}

.right {
  display: flex;
  width: 46%;
  height: 100%;
  background-color: #e6e6e6;
  border-radius: 3%;
  margin-right: 10px;
}

.right-text {
  margin: 16px 10px;
}

.right-text1 {
  font-size: 16px;
}

.right-text2 {
  font-size: 12px;
  color: #bfbfbf;
}

.right-icon {
  width: 32px;
  height: 32px;
  margin: 16px 0px 16px 26px;
}

.top-type {
  display: flex;
  justify-content: space-between;
  margin: 10px;
}

.top-left {
  font-size: 15px;
}

.top-right {
  font-size: 13px;
  color: #bfbfbf;
}

.top {
  width: 100%;
  height: 80px;
  padding: 0px 10px;
}

.top-img {
  width: 22%;
  height: 100%;
  max-width: 22%;
  max-height: 100%;
  border-radius: 6px;
  margin-right: 10px;
}
.tags{
  display: flex;
  flex-wrap: wrap;
}
.tag{
  margin-bottom: 4px;
}
.want-eat {
  border-top: 4px solid #e6e6e6;
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top: 26px;
}
.top-conten{
  margin: 10px 0px;
}
