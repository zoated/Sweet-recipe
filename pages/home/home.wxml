<view class="page">
  <view class="page__bd">
    <wux-search-bar clear maxlength="8" />
  </view>
  <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}" indicator-active-color='white' bindchange='change'>
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" bindtap="swipclick" />
      </swiper-item>
    </block>
  </swiper>
  <view class="chosen-type">
    <view class="left">
      <view class="left-text">
        <view class="left-text1">早中晚餐</view>
        <view class="left-text2">每日三餐推荐</view>
      </view>
      <image src="../src/chef-icon.png" class="left-icon" />
    </view>
    <view class="right">
      <view class="right-text">
        <view class="right-text1">精选菜谱</view>
        <view class="right-text2">热门菜系推荐</view>
      </view>
      <image src="../src/menu-icon.png" class="right-icon" />
    </view>
  </view>
  <view class="top-type">
    <view class="top-left">热门分类</view>
    <view class="top-right">查看全部</view>
  </view>
  <view class="top">
    <image src="../src/homely.jpg" class="top-img" />
    <image src="../src/western-food.jpg" class="top-img" />
    <image src="../src/snack.jpg" class="top-img" />
    <image src="../src/baking.jpg" class="top-img" />
  </view>
  <view class="want-eat">
    <view class="want-title">- 我想吃的 -</view>
  </view>
</view>